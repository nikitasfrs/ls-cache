{
  "name": "ls-cache",
  "version": "1.0.0",
  "description": "Simple localStorage caching library",
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikitasfrs/ls-cache.git"
  },
  "keywords": [
    "localstorage"
  ],
  "author": "Nikitas Frantzeskakis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nikitasfrs/ls-cache/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/nikitasfrs/ls-cache#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "babel-jest": "^24.0.0",
    "jest": "^24.0.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.3.1"
  }
}
